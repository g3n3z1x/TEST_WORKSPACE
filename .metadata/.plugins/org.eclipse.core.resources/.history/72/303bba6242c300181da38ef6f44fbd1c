	public static Double roundFormat(Double value) {
		DecimalFormat df = new DecimalFormat("#.####");
		df.setRoundingMode(RoundingMode.CEILING);
		Double result = Double.parseDouble(df.format(value));
		System.out.println(result);
		return result;
	}

}
